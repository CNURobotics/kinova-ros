<launch>
  <arg name="robot_name"  default="$(optenv KINOVA_ARM j2s7s300)"/>

  <!-- Load joint controller configurations from YAML file to parameter server -->
  <rosparam file="$(find kinova_control)/config/$(arg robot_name)_moveit_control.yaml" command="load"/>

  <!-- load the controllers -->
  <node name="controller_spawner" pkg="controller_manager" type="spawner" respawn="false"
    output="screen" ns="/$(arg robot_name)_driver"
    args="arm_controller
          gripper_controller
          joint_state_controller
          "/>

  <!-- convert joint states to TF transforms for rviz, etc -->
  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" respawn="false" output="screen">
    <remap from="/joint_states" to="/$(arg robot_name)_driver/joint_states" />
  </node>

</launch>
